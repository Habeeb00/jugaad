{
  "name": "Add to Calendar",
  "short_name": "Add2Cal",
  "description": "Share TinkerHub event links to add them to your calendar instantly",
  "start_url": "/",
  "id": "/",
  "display": "standalone",
  "background_color": "#0f0f23",
  "theme_color": "#6366f1",
  "orientation": "portrait",
  "scope": "/",
  "categories": ["productivity", "utilities"],
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icon-maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "url": "url",
      "title": "title",
      "text": "text"
    }
  },
  "shortcuts": [
    {
      "name": "Paste Event URL",
      "short_name": "Paste URL",
      "description": "Manually paste a TinkerHub event URL",
      "url": "/?action=paste",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+tinkerhub",
      "url": "/share?url=%s"
    }
  ]
}
